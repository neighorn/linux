#! /bin/sh
while ps -f | grep -q dirvish | grep -v grep
do
	now=`date +%T`
	ps -ef |
	grep rsync |
	grep -v grep |
	while read trash pid trash
	do
		lsof -p $pid
	done |
	grep tree/ |
	while read trash trash trash trash trash trash trash trash filename
	do
		echo $now $filename
	done |
	sort
	sleep 30
done
date '+No dirvish processes running at %T'

